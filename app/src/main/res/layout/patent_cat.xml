<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="12"
    android:paddingLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

<TextView
    android:id="@+id/parent_cat_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:layout_marginStart="30dp"
    android:padding="10dp"
    android:text="Category"
    android:textColor="@color/colorPrimaryDark"
    android:paddingLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
    android:textSize="20sp"
    android:textStyle="bold" />

    <ImageView
        android:id="@+id/groupupdate"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="5"
        android:src="@drawable/edite_ic"/>
    <ImageView
        android:id="@+id/groupdelete"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="5"
        android:src="@drawable/group_delete_ic"/>


</LinearLayout>